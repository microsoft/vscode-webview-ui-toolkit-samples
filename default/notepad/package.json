{
  "name": "notepad",
  "displayName": "notepad",
  "description": "A sample extension that showcases the Webview UI Toolkit for VS Code alongside the VS Code TreeView and Webview API",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:notepad.notesList"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "notepad.createNote",
        "title": "Create a note",
        "icon": "$(add)",
        "category": "Notepad"
      },
      {
        "command": "notepad.deleteNote",
        "title": "Delete note",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "notepad",
          "title": "Notepad",
          "icon": "$(notebook)"
        }
      ]
    },
    "views": {
      "notepad": [
        {
          "id": "notepad.notesList",
          "name": "My Notes",
          "type": "tree",
          "visibility": "visible"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "notepad.notesList",
        "contents": "No notes yet!\n[Create a note](command:notepad.createNote)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "notepad.createNote",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "notepad.deleteNote",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/node": "^12.11.7",
    "@types/uuid": "^8.3.1",
    "@types/vscode": "^1.59.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^0.8.3",
    "uuid": "^8.3.2"
  }
}
