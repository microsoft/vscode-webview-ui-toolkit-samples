{
  "name": "hello-world",
  "displayName": "hello-world",
  "description": "A hello world sample extension to show off the Webview UI Toolkit for Visual Studio Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:hello-world.showHelloWorld"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hello-world.showHelloWorld",
        "title": "Hello World: Show"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild-webview": "esbuild ./src/webview/main.ts --bundle --outfile=dist/webview.js --target=es2020 --format=esm",
    "compile": "npm run esbuild-base -- --sourcemap && npm run esbuild-webview -- --sourcemap",
    "watch": "npm run esbuild-webview -- --sourcemap && npm run esbuild-base -- --sourcemap --watch",
    "package": "npm run esbuild-base -- --minify && npm run esbuild-webview -- --minify",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@types/vscode-webview": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "esbuild": "^0.16.10",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "prettier": "^2.8.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.2.0"
  }
}
